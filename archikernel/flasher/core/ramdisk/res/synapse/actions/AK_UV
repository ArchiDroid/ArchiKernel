# Read -> return current value for given $1 step
# Write -> set $2 value for given $1 step

SYSFS_FILE="/sys/devices/system/cpu/cpu0/cpufreq/UV_uV_table"

if [[ -z "$2" ]]; then # Read mode
	sed -e 's/mhz://g;s/uV//g' < "$SYSFS_FILE" | while read UV_TABLE; do
		FREQ="$(echo "$UV_TABLE" | awk '{print $1}')"
		if [[ "$FREQ" -eq "$1" ]]; then
			echo "$UV_TABLE" | awk '{print $2}' # Synapse return
			break
		fi
	done
else # Write mode
	SYSFS_WRITE="$(
		sed -e 's/mhz://g;s/uV//g' < "$SYSFS_FILE" | (while read UV_TABLE; do
			FREQ="$(echo "$UV_TABLE" | awk '{print $1}')"
			if [[ "$FREQ" -eq "$1" ]]; then
				SYSFS_WRITE="$SYSFS_WRITE $2"
			else
				VALUE="$(echo "$UV_TABLE" | awk '{print $2}')"
				SYSFS_WRITE="$SYSFS_WRITE $VALUE"
			fi
		done
		echo "$SYSFS_WRITE")
	)"
	echo "$SYSFS_WRITE" > "$SYSFS_FILE" # Write effect
	echo "$2" # Synapse return
fi
